{
  "name": "pagination",
  "version": "0.0.1",
  "description": "",
  "main": "/lib/pagination.js",
  "module": "/lib/pagination.esm.js",
  "type": "module",
  "scripts": {
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "build": "npx rollup -c",
    "format": "prettier --write --parser typescript src/**/*.ts",
    "format:check": "prettier src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "test": "jest",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "keywords": [
    "typescript",
    "pagination",
    "javascript"
  ],
  "author": "Luiz Paulo Cristino, <luiz.paulo.cristino@gmail.com>",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuizCristino/pagination.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "ts-node scripts/verify-commit.ts"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "rollup": "^3.19.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.2.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
